<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="net.wcc.spotify_swipe.feature">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application>
        <activity
                android:name=".MainActivity"
                android:label="Welcome to SongSwipe">
            <intent-filter android:order="1">
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.BROWSABLE"/>
                <category android:name="android.intent.category.DEFAULT"/>

                <data
                        android:host="wcc.net"
                        android:pathPattern="/.*"
                        android:scheme="https"/>
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".NavMenu"
                android:label="@string/title_activity_nav_menu"
                android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".SearchActivity"/>
        <activity android:name=".CardActivity"/>
        <activity android:name=".PopupCardActivity"/>
        <activity android:name=".InitialSeedActivity">
        </activity>
    </application>

</manifest>